{% extends 'base.html.twig' %}

{% block title %}Film index{% endblock %}

{% block body %}
    <h1>Film index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_film</th>
                <th>Duree</th>
                <th>Categorie</th>
                <th>Description</th>
                <th>Image</th>
                <th>Realisateur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td>{{ film.id }}</td>
                <td>{{ film.nomFilm }}</td>
                <td>{{ film.duree }}</td>
                <td>{{ film.Categorie }}</td>
                <td>{{ film.Description }}</td>
                <td>{{ film.image }}</td>
                <td>{{ film.Realisateur }}</td>
                <td>
                    <a href="{{ path('app_film_show', {'id': film.id}) }}">show</a>
                    <a href="{{ path('app_film_edit', {'id': film.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_film_new') }}">Create new</a>
{% endblock %}
